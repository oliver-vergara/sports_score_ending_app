<div class="container">
  <div class="form-box">
    <div class="form-header">
      <h2>Game Score</h2>
    </div>
    <div class="form-body">
      <%= form_tag score_input_path, method: :post do %>
        <div class="form-group">
          <label>Winner</label>
            <%= text_field_tag :winning_score, nil, class: "form-control" %>
        </div>
        <div class="form-group">
          <label>Loser</label>
            <%= text_field_tag :losing_score, nil, class: "form-control" %>
        </div>
        <%= submit_tag 'Update Score', class: "btn btn-primary new_game_button"  %>
        
      <% end %>
    </div>
  </div>
</div>


